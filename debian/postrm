#!/bin/sh

# postrm script for burrow
#
# see: dh_installdeb(1)

set -e

case "$1" in
    purge)
        deluser --quiet --system burrow >/dev/null || true
        deluser --quiet --group --system --only-if-empty --remove-home burrow || true
        rm -rf /var/log/burrow
        ;;
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        ;;
    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
